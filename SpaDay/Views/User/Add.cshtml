@model SpaDay.ViewModels.AddUserViewModel;


<h1>Sign Up Form</h1>

@if (ViewBag.error != null)
{
    <p>@ViewBag.error</p>
}

<form method="post" asp-controller="User" asp-action="Add">
    <div class="form-group">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Contact Email</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="VerifyPassword">Verify Password</label>
        <input asp-for="VerifyPassword" type="password" />
        <span asp-validation-for="VerifyPassword"></span>
    </div>
    <input type='submit' value='Submit'>
</form>
